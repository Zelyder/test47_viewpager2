<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBlue"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civOnboardingAvatar"
        android:layout_width="@dimen/onboarding_avatar_diameter"
        android:layout_height="@dimen/onboarding_avatar_diameter"
        android:src="@drawable/img_portrait_page_02"
        app:civ_border_width="@dimen/onboarding_avatar_stroke_width"
        app:civ_border_color="@color/colorGrayStroke"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tvOnboardingPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginEnd="@dimen/space_16dp"
        android:gravity="center"
        android:textColor="@color/colorLightOnDarkText"
        android:textStyle="bold"
        android:textSize="@dimen/onboarding_page_title_size"
        android:text="@string/onboarding_page_title_sample"
        app:layout_constraintTop_toBottomOf="@+id/civOnboardingAvatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tvOnboardingPageSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:layout_marginBottom="@dimen/space_16dp"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginEnd="@dimen/space_16dp"
        android:gravity="center"
        android:textColor="@color/white70"
        android:textSize="@dimen/onboarding_page_subtitle_size"
        android:text="@string/onboarding_page_subtitle_sample"
        app:layout_constraintTop_toBottomOf="@+id/tvOnboardingPageTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>